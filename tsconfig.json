{
  "compilerOptions": {
    "baseUrl": "/",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "types": [
      "node",
      "express",
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}